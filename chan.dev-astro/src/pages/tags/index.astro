---
import Layout from "@layouts/Layout.astro";
import PostMeta from "@components/header-post-meta.astro";
import { getPostCollectionTags } from "@modules/post";
import site from "@src/metadata.json";

let tags = await getPostCollectionTags();
---

<Layout>
  <main class="prose">
    <h1>Tags</h1>
    <ul>
      {
        tags.map((tag) => (
          <li>
            <a href={`/tags/${tag}`}>{tag}</a>
          </li>
        ))
      }
    </ul>
  </main>
  <PostMeta
    slot="page-meta"
    title={`Tag index | ${site.title}`}
    description="Find chantastic posts by tagâ€¦"
    url={`http://chan.dev/tags`}
  />
</Layout>
