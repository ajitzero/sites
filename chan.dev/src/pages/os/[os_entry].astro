---
import Layout from "@layouts/Layout.astro";
import PostMeta from "@components/header-post-meta.astro";
import * as OS from "@pages/os/os";
import * as site from "@modules/site";

export async function getStaticPaths() {
  const posts = await OS.getCollection();

  return posts.map((entry) => ({
    params: { os_entry: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: OS.CollectionEntry;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout content_path={OS.path(entry.id)}>
  <main class="prose">
    <article>
      <small>
        <a href="/" class="go-home">â‡  chan.dev</a>
      </small>
      <h1 class="mb-2 mt-6">
        <a href={`/${OS.path()}`}
          >{entry.collection.toUpperCase()}</a
        > /
        {entry.data.title}
      </h1>
      <Content />
    </article>
  </main>
  <PostMeta
    slot="page-meta"
    title={entry.data.title}
    url={site.url(OS.path(entry.slug))}
  />
</Layout>
