---
import Layout from "@layouts/Layout.astro";
import PostMeta from "@components/header-post-meta.astro";
import * as OS from "@pages/os/os";

export async function getStaticPaths() {
  const posts = await OS.getCollection();

  return posts.map((entry) => ({
    params: { os_entry: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: OS.CollectionEntry;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <div class="prose">
    <small>
      â‡  <a href="/">chan.dev</a>
      / <a href={`/${OS.path()}`}
        >{entry.collection.toUpperCase()}</a
      >
    </small>
    <main class="mt-4">
      <h1>
        {entry.data.title}
      </h1>
      <Content />
    </main>
  </div>
  <PostMeta
    slot="page-meta"
    title={entry.data.title}
    path={OS.path(entry.slug)}
  />
</Layout>
