---
import PostMeta from "@components/header-post-meta.astro";
import Layout from "@layouts/Layout.astro";
import * as OS from "@pages/os/os";

let entries = await OS.getCollection();
---

<Layout content_path={OS.path()}>
  <main class="prose">
    <h1>{OS.COLLECTION_NAME.toUpperCase()}</h1>
    <ul>
      {
        entries.map((entry) => (
          <li>
            <a href={`/${OS.path(entry.slug)}`}>
              {entry.data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </main>
  <PostMeta
    title="a chantastic OS"
    path={OS.path()}
    slot="page-meta"
  />
</Layout>
