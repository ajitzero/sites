---
import PostMeta from "@components/header-post-meta.astro";
import Layout from "@layouts/Layout.astro";
import * as OS from "@pages/os/os";

const entries = await OS.getCollection();
---

<Layout content_path={OS.path()}>
  <div class="prose">
    <small>
      <a href="/">â‡  chan.dev</a>
    </small>
    <main class="mt-4">
      <h1>{OS.COLLECTION_NAME.toUpperCase()}</h1>
      <ul>
        {
          entries.map((entry) => (
            <li>
              <a href={`/${OS.path(entry.slug)}`}>{entry.data.title}</a>
            </li>
          ))
        }
      </ul>
    </main>
  </div>
  <PostMeta title="a chantastic OS" path={OS.path()} slot="page-meta" />
</Layout>
