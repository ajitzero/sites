					<th>Monday</th>
					<th>Tuesday</th>
					<th>Wednesday</th>
					<th>Thursday</th>
					<th>Friday</th>
					<th>Saturday</th>
				</tr>
			</thead>
			<tbody>
				{
					chore_data.map((chore) => (
						<tr>
							<td>{chore.name}</td>
							{chore.weekly_occurances.map((occurance) => {
								if (occurance) {
									return (
										<td
											class="border"
											hx-post={`/chores/partials/${chore.id}`}
											hx-trigger="click"
											hx-swap="outerHTML"
										/>
									)
								} else {
									return (
										<td
											class="border"
											style={{backgroundColor: 'currentColor'}}
										/>
									)
								}
							})}
						</tr>
					))
				}
			</tbody>
		</table>
