---

<Layout>
	<Prose>
		<h1>Ruby</h1>
		<table class="table-fixed">
			<thead>
				<tr>
					<th></th>
					<th>Sunday</th>
					<th>Monday</th>
					<th>Tuesday</th>
					<th>Wednesday</th>
					<th>Thursday</th>
					<th>Friday</th>
					<th>Saturday</th>
				</tr>
			</thead>
			<tbody>
				{
					chore_data.map((chore) => (
						<tr>
							<td>{chore.name}</td>
							{chore.weekly_occurances.map((occurance) => {
								if (occurance) {
									return <td class="border" />
								} else {
									return (
										<td
											class="border"
											style={{backgroundColor: 'currentColor'}}
										/>
									)
								}
							})}
						</tr>
					))
				}
			</tbody>
		</table>
	</Prose>
</Layout>
