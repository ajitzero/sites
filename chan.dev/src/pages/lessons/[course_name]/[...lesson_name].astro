      / <a href={`/${LESSONS.path(course_name)}`}
        >{course_name}</a
      >
    </small>
    <main class="mt-4">
      <h1>
        {entry.data.title}
      </h1>
      <Content />
    </main>
  </div>
  <PostMeta
    title={String(entry.data.title)}
    path={LESSONS.path(entry.slug)}
    slot="page-meta"
  />
</Layout>
