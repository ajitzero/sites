---
import PostMeta from "@components/header-post-meta.astro";
import Layout from "@layouts/Layout.astro";
import * as LESSONS from "@pages/lessons/lessons";
import * as site from "@modules/site";

let lessons = await LESSONS.getCollection();
---

<Layout content_path={LESSONS.path()}>
  <main class="prose">
    <ul>
      {
        lessons.map((entry) => (
          <li>
            <a href={`/${LESSONS.path(entry.slug)}`}>
              {entry.slug}
            </a>
          </li>
        ))
      }
    </ul>
  </main>
  <PostMeta
    title={LESSONS.title()}
    description="A collection of small, focused, action-oriented lessons by chantastic."
    url={site.url(LESSONS.path())}
    slot="page-meta"
  />
</Layout>
