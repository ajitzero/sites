---
import PostMeta from "@components/header-post-meta.astro";
import Layout from "@layouts/Layout.astro";
import * as LESSONS from "@pages/lessons/lessons";

const lessons = await LESSONS.getCollection();
---

<Layout>
  <div class="prose prose-slate dark:prose-invert">
    <small>
      â‡  <a href="/">chan.dev</a>
    </small>
    <main class="mt-4">
      <h1 class="tracking-tight">Lessons</h1>
      <ul>
        {
          lessons.map((entry) => (
            <li>
              <a href={`/${LESSONS.path(entry.slug)}`}>
                {entry.slug}
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </div>
  <PostMeta
    title={LESSONS.title()}
    description="A collection of small, focused, action-oriented lessons by chantastic."
    path={LESSONS.path()}
    slot="page-meta"
  />
</Layout>
