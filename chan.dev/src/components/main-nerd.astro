---
const { content_path } = Astro.props;

interface Props {
  content_path: string;
}
---

<section id="nerd">
  <p>Nerd stuff</p>
  <a
    target="_blank"
    rel="noreferrer noopener"
    href=`https://github.com/chantastic/sites/commits/main/chan.dev/src/content/${content_path}`
    >File history</a
  >
</section>

<style>
  #nerd {
    box-sizing: border-box;
    padding: 1rem;
    background-color: #ddd;
  }
  #nerd:not(:target) {
    display: none;
  }
</style>
